<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_item_xu"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:id="@+id/itemXu">
        <ImageView
            android:id="@+id/imgMoney"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/onecoin"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_toRightOf="@+id/imgMoney"
            android:id="@+id/tvSoXu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"

            android:layout_marginLeft="30dp"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_toRightOf="@+id/tvSoXu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" xu"
            android:textSize="20dp"
            android:textColor="#918E8E"
            android:layout_marginTop="3dp"
            />
        <RelativeLayout
            android:id="@+id/soTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_money"
            android:padding="5dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tvSoTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23000"
                android:textSize="19dp"
                android:textColor="#FF0000"
                android:paddingLeft="10dp"/>
            <TextView
                android:layout_toRightOf="@+id/tvSoTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" đ"
                android:textSize="20dp"
                android:textColor="#FF0000"
                android:paddingRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSoXu"
            android:layout_marginLeft="70dp"
            >
            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ "
                android:textColor="#FF0000"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvDiem"
                android:layout_toRightOf="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textColor="#FF0000"
                android:textSize="15dp"/>
            <TextView
                android:layout_toRightOf="@+id/tvDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" điểm"
                android:textColor="#FF0000"
                android:textSize="15dp"/>


        </RelativeLayout>
    </RelativeLayout>
</layout>