<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F4EEE5"
    android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/lo1">
                   <ImageView
                       android:id="@+id/logo"
                       android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:src="@drawable/logo5"
                       android:layout_centerInParent="true">
                   </ImageView>
                   <TextView
                       android:layout_marginTop="-30dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Đăng nhập để đọc và viết truyện miễn phí"
                       android:id="@+id/tv1"
                       android:layout_below="@+id/logo"
                       android:layout_centerHorizontal="true"
                       android:textColor="#97000000"
                       >
                   </TextView>
               </RelativeLayout>
               <RelativeLayout
                   android:id="@+id/lo2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/lo1"
                   android:background="@drawable/customborder"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:layout_marginTop="30dp"
                   android:padding="10dp"
                   >
                   <EditText
                       android:id="@+id/edtten"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Tên đăng nhập"
                       android:textColorHint="#7E7E7E"
                       android:textColor="@color/black"
                       android:textSize="15dp"
                       >
                   </EditText>
                   <EditText
                       android:id="@+id/edtmk"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/edtten"
                       android:hint="Mật khẩu"
                       android:textColor="@color/black"
                       android:textColorHint="#7E7E7E"
                       android:password="true"
                       android:textSize="15dp">
                   </EditText>
               </RelativeLayout>

               <CheckBox
                   android:id="@+id/cbsaved"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Lưu mật khẩu?"
                   android:textColor="#FA6D04"
                   android:textStyle="bold"
                   android:layout_below="@+id/lo2"
                   android:layout_marginHorizontal="30dp"
                   android:button="@drawable/custom_cb_login"
                   android:paddingLeft="5dp"
                   android:layout_marginVertical="10dp"
                   />

               <TextView
                   android:id="@+id/tverr"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/cbsaved"
                   android:layout_marginLeft="30dp"
                   android:layout_marginTop="10dp"
                   android:textColor="#FF0000"
                   android:text=""
                   android:textSize="12dp"/>
               <Button
                   android:id="@+id/btndn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/tverr"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:text="Đăng nhập"
                   android:textColor="@color/black"
                   android:backgroundTint="#FA6D04"
                   android:layout_marginTop="20dp">
               </Button>
               <TextView
                   android:id="@+id/tvquenmk"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/btndn"
                   android:layout_centerHorizontal="true"
                   android:text="Quên Mật khẩu?"
                   android:textColor="@color/black"
                   android:layout_marginTop="10dp"
                   android:textStyle="bold">
               </TextView>
               <TextView
                   android:id="@+id/tvdk"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bạn không có tài khoản? Hãy đăng ký"
                   android:textColor="#FA6D04"
                   android:layout_below="@+id/tvquenmk"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="30dp"
                   android:textStyle="bold"
                   />
           </RelativeLayout>
</RelativeLayout>