<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4EEE5">
        <RelativeLayout
            android:id="@+id/LO1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/leftarrowwhite"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back"
                android:layout_centerVertical="true"
                android:text="Giới thiệu"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/LO2"
            android:layout_below="@+id/LO1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/logo5"
                android:scaleType="fitStart"/>
            <TextView
                android:id="@+id/tvC1"
                android:layout_below="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-90dp"
                android:text="Hôm nay đọc sách,"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:textColor="#E9757373"
                />
            <TextView
                android:layout_below="@+id/tvC1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mai thành tài."
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:textColor="#E9757373"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/LO3"
            android:layout_below="@+id/LO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tvBS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BucSeo"
                android:textSize="18dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_below="@+id/tvBS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2021 BucSeo"
                android:textSize="15dp"
                android:textColor="#E9757373" />
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"/>
        <RelativeLayout
            android:id="@+id/LO4"
            android:layout_below="@+id/LO3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tvPhienBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phiên bản"
                android:textSize="18dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_below="@+id/tvPhienBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:textSize="15dp"
                android:textColor="#E9757373" />
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"/>
        <RelativeLayout
            android:id="@+id/LO5"
            android:layout_below="@+id/LO4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/tvCSBM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính sách bảo mật"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"/>
        <RelativeLayout
            android:id="@+id/LO6"
            android:layout_below="@+id/LO5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:id="@+id/tvDKSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điều khoản sử dụng"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tvBQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bản quyền team TTC"
                android:textSize="15dp"
                android:textColor="#E9757373"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_below="@+id/tvBQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright@ 2021 BucSeo All Rights Reserved"
                android:textSize="15dp"
                android:textColor="#E9757373"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </RelativeLayout>

</layout>