<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4EEE5">
        <RelativeLayout
            android:id="@+id/LO1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">
            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/leftarrowwhite"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/back"
                android:layout_centerVertical="true"
                android:text="Đổi mật khẩu"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LO2"
            android:layout_below="@+id/LO1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvCurrentPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu hiện tại"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_centerVertical="true">
            </TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvCurrentPassword"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border_edtpassword"
                android:padding="5dp"
                android:password="true"
                android:textColor="@color/black">
            </EditText>
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/LO3"
            android:layout_below="@+id/LO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvNewPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_centerVertical="true">
            </TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvNewPassword"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border_edtpassword"
                android:padding="5dp"
                android:password="true"
                android:textColor="@color/black">
            </EditText>
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:layout_marginTop="10dp"
            />
        <RelativeLayout
            android:id="@+id/LO4"
            android:layout_below="@+id/LO3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tvNLMK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_centerVertical="true">
            </TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvNLMK"
                android:layout_marginLeft="30dp"
                android:background="@drawable/border_edtpassword"
                android:padding="5dp"
                android:password="true"
                android:textColor="@color/black">
            </EditText>
        </RelativeLayout>
        <View
            android:layout_below="@+id/LO4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DAD8D8"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:layout_below="@+id/LO4"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#FA6D04"
            android:textColor="@color/white"
            android:textSize="15dp">
        </Button>
    </RelativeLayout>
</layout>