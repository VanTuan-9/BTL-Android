<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">

        <ImageButton
            android:id="@+id/ibtn_menu"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_open_24"
            android:background="@null"
            />
        <EditText
            android:id="@+id/edt_search"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search"
            android:hint="Tìm kiếm sách"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:paddingLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xem gần đây"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:textColor="@android:color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_book_near"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tất cả sách"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:textColor="@android:color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_all_item_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/infor_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không tồn tại"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="italic"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_item_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>