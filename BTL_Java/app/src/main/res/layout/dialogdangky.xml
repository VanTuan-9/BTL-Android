<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/borderradius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/lo1">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo5"
                android:layout_centerInParent="true">
            </ImageView>
            <TextView
                android:layout_marginTop="-30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký để đọc và viết truyện miễn phí"
                android:id="@+id/tv1"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:textColor="#97000000"
                >
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lo1"
            android:background="@drawable/customborder"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            >
            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#7E7E7E"
                android:textColor="@color/black"
                android:textSize="15dp"
                >
            </EditText>
            <EditText
                android:id="@+id/edttendk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên đăng nhập"
                android:textColorHint="#7E7E7E"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_below="@+id/edtemail"
                >
            </EditText>
            <EditText
                android:id="@+id/edtmkdk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edttendk"
                android:hint="Mật khẩu"
                android:textColor="@color/black"
                android:textColorHint="#7E7E7E"
                android:password="true"
                android:textSize="15dp">
            </EditText>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvErrDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lo2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#FF0000"
            android:text=""
            android:textSize="12dp"
            />
        <Button
            android:id="@+id/btndk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lo2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Đăng ký"
            android:textColor="@color/black"
            android:backgroundTint="#FA6D04"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp">
        </Button>
        <TextView
            android:id="@+id/tvdn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có tài khoản? Hãy đăng nhập"
            android:textColor="#FA6D04"
            android:layout_below="@+id/btndk"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />
    </RelativeLayout>
</RelativeLayout>